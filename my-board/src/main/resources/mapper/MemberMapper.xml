<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kye.my_board.repository.MemberMapper">


    <insert id="save" parameterType="kye.my_board.domain.Member">
        INSERT INTO member(email, nickname, password)
        VALUES(#{email}, #{nickname}, #{password})
    </insert>

    <select id="findByEmail" parameterType="java.lang.String" resultType="kye.my_board.domain.Member">
        SELECT *
        FROM member
        WHERE email = #{email}
    </select>

    <select id="findByNickname" parameterType="java.lang.String" resultType="kye.my_board.domain.Member">
        SELECT *
        FROM member
        WHERE nickname = #{nickname}
    </select>

</mapper>
